<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/sepet_card"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageYemek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textYemekAd"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/prata"
                android:text="Izgara Tavuk"
                android:textColor="@color/koyugri"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageYemek"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif"
                android:text="â‚º27"
                android:textColor="@color/koyugri"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageClock"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="19dp"
                android:backgroundTint="#BDC5CC"
                app:layout_constraintStart_toEndOf="@+id/imageYemek"
                app:layout_constraintTop_toBottomOf="@+id/textYemekAd"
                app:srcCompat="@drawable/clock" />

            <TextView
                android:id="@+id/textClock"
                android:layout_width="64dp"
                android:layout_height="19dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="15 min"
                android:textAlignment="textStart"
                android:textColor="#676565"
                app:layout_constraintStart_toEndOf="@+id/imageClock"
                app:layout_constraintTop_toBottomOf="@+id/textYemekAd" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>